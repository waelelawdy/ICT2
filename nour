    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-auth-compat.js"></script>
    <script>
        // Firebase configuration - replace with your actual Firebase config
        const firebaseConfig = {
            apiKey: "AIzaSyB7N3p7xTgx8wF1fLbYj4XqZg7fDv2Hw1I",
            authDomain: "egypt-ict-platform.firebaseapp.com",
            projectId: "egypt-ict-platform",
            storageBucket: "egypt-ict-platform.appspot.com",
            messagingSenderId: "123456789012",
            appId: "1:123456789012:web:abcd1234efgh5678ijkl90"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
    </script>

    <script>
        // Basic interactivity for the page
        document.addEventListener('DOMContentLoaded', function() {
            // Navigation active state
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => {
                item.addEventListener('click', function() {
                    navItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // Grade card hover effect enhancement
            const gradeCards = document.querySelectorAll('.grade-card');
            gradeCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Auth Modal Functionality
            const authModal = document.getElementById('authModal');
            const closeModal = document.getElementById('closeModal');
            const modalTitle = document.getElementById('modalTitle');
            const authBtn = document.getElementById('authBtn');
            const switchLink = document.getElementById('switchLink');
            const switchText = document.getElementById('switchText');
            const errorMessage = document.getElementById('errorMessage');
            const loginBtn = document.getElementById('loginBtn');
            const registerBtn = document.getElementById('registerBtn');
            const userActions = document.getElementById('userActions');
            
            let isLoginMode = true;
            
            // Open modal when login/register buttons are clicked
            loginBtn.addEventListener('click', () => {
                isLoginMode = true;
                updateModalUI();
                authModal.style.display = 'flex';
            });
            
            registerBtn.addEventListener('click', () => {
                isLoginMode = false;
                updateModalUI();
                authModal.style.display = 'flex';
            });
            
            // Close modal
            closeModal.addEventListener('click', () => {
                authModal.style.display = 'none';
                clearError();
            });
            
            // Switch between login and register
            switchLink.addEventListener('click', () => {
                isLoginMode = !isLoginMode;
                updateModalUI();
            });
            
            function updateModalUI() {
                if (isLoginMode) {
                    modalTitle.textContent = 'تسجيل الدخول';
                    authBtn.textContent = 'تسجيل الدخول';
                    switchText.innerHTML = 'ليس لديك حساب؟ <a id="switchLink">إنشاء حساب</a>';
                } else {
                    modalTitle.textContent = 'إنشاء حساب';
                    authBtn.textContent = 'إنشاء حساب';
                    switchText.innerHTML = 'لديك حساب بالفعل؟ <a id="switchLink">تسجيل الدخول</a>';
                }
            }
            
            // Auth functionality
            authBtn.addEventListener('click', () => {
                const email = document.getElementById('email').value;
                const password = document.getElementById('password').value;
                
                if (!email || !password) {
                    showError('الرجاء إدخال البريد الإلكتروني وكلمة المرور');
                    return;
                }
                
                if (isLoginMode) {
                    // Login
                    auth.signInWithEmailAndPassword(email, password)
                        .then((userCredential) => {
                            // Signed in
                            const user = userCredential.user;
                            authModal.style.display = 'none';
                            showUserInfo(user.email);
                        })
                        .catch((error) => {
                            showError(error.message);
                        });
                } else {
                    // Register
                    auth.createUserWithEmailAndPassword(email, password)
                        .then((userCredential) => {
                            // Signed up
                            const user = userCredential.user;
                            authModal.style.display = 'none';
                            showUserInfo(user.email);
                        })
                        .catch((error) => {
                            showError(error.message);
                        });
                }
            });
            
            function showUserInfo(email) {
                const username = email.split('@')[0];
                const firstLetter = username.charAt(0).toUpperCase();
                
                userActions.innerHTML = `
                    <div class="user-info">
                        <div class="user-avatar">${firstLetter}</div>
                        <span>${username}</span>
                    </div>
                    <button class="btn btn-logout" id="logoutBtn"><i class="fas fa-sign-out-alt"></i> تسجيل الخروج</button>
                `;
                
                document.getElementById('logoutBtn').addEventListener('click', () => {
                    auth.signOut().then(() => {
                        userActions.innerHTML = `
                            <button class="btn btn-login" id="loginBtn"><i class="fas fa-sign-in-alt"></i> تسجيل الدخول</button>
                            <button class="btn btn-register" id="registerBtn"><i class="fas fa-user-plus"></i> إنشاء حساب</button>
                        `;
                        
                        // Reattach event listeners
                        document.getElementById('loginBtn').addEventListener('click', () => {
                            isLoginMode = true;
                            updateModalUI();
                            authModal.style.display = 'flex';
                        });
                        
                        document.getElementById('registerBtn').addEventListener('click', () => {
                            isLoginMode = false;
                            updateModalUI();
                            authModal.style.display = 'flex';
                        });
                    });
                });
            }
            
            function showError(message) {
                errorMessage.textContent = message;
                errorMessage.style.display = 'block';
                
                setTimeout(() => {
                    errorMessage.style.display = 'none';
                }, 5000);
            }
            
            function clearError() {
                errorMessage.style.display = 'none';
            }
            
            // Listen for auth state changes
            auth.onAuthStateChanged((user) => {
                if (user) {
                    showUserInfo(user.email);
                }
            });
            
            // Hero button functionality
            const heroBtn = document.querySelector('.btn-hero');
            heroBtn.addEventListener('click', function() {
                alert('مرحبًا بكم في منصة ICT التعليمية! سيتم توجيهكم إلى صفحة الدروس.');
            });
            
            // App store buttons animation
            const appBtns = document.querySelectorAll('.app-btn');
            appBtns.forEach(btn => {
                btn.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                
                btn.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Lesson card animation
            const lessonCards = document.querySelectorAll('.lesson-card');
            lessonCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
</body>
</html>